<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_bumble"
    tools:context=".IdentificationActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:progress="50"
        android:progressTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mTvIdentify"
        style="@style/TitleTextViewBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_identification"
        android:textSize="@dimen/sp_31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mTvwelcome"
        style="@style/Title2ndLineTextViewBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/everyone_s_welcome_on_bumble"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvIdentify" />

    <TextView
        android:id="@+id/men"
        style="@style/TextView_1RadioBtn"
        android:text="@string/woman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvwelcome" />

    <TextView
        android:id="@+id/women"
        style="@style/TextView_1RadioBtn"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/rectangle_phonenumber_bg"
        android:padding="@dimen/dp_20"
        android:text="@string/man"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/men" />

    <TextView
        android:id="@+id/everyone"
        style="@style/TextView_1RadioBtn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/non_binary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/women" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_90"
        android:layout_marginStart="@dimen/dp_90"
        android:drawableEnd="@drawable/ic_iconfinder_icon_ios7_arrow_down_211687"
        android:text="@string/more_gender_options"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/everyone" />



    <ImageButton
        android:id="@+id/iBtnForHowDoYouIdentify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/circle_phonenumber_bg"
        android:padding="@dimen/dp_12"
        android:src="@drawable/ic_baseline_keyboard_white_arrow_right_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/iBtnWomenIdentity"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@+id/men"
        app:layout_constraintEnd_toEndOf="@+id/men"
        app:layout_constraintTop_toTopOf="@+id/men"
        app:srcCompat="@drawable/ic_radioonenne" />

    <ImageButton
        android:id="@+id/iBtnManIdentity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/women"
        app:layout_constraintEnd_toEndOf="@+id/women"
        app:layout_constraintTop_toTopOf="@+id/women"
        app:srcCompat="@drawable/ic_radioonenne" />

    <ImageButton
        android:id="@+id/iBtnNonBinaryIdentity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/everyone"
        app:layout_constraintEnd_toEndOf="@+id/everyone"
        app:layout_constraintTop_toTopOf="@+id/everyone"
        app:layout_constraintVertical_bias="0.475"
        app:srcCompat="@drawable/ic_radioonenne" />


</androidx.constraintlayout.widget.ConstraintLayout>